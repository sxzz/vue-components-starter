{
  "name": "vue-components-starter",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@10.25.0",
  "description": "A starter for creating a Vue component library.",
  "author": "Kevin Deng <sxzz@sxzz.moe>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/sxzz",
  "homepage": "https://github.com/sxzz/vue-components-starter#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sxzz/vue-components-starter.git"
  },
  "bugs": {
    "url": "https://github.com/sxzz/vue-components-starter/issues"
  },
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsdown",
    "dev": "tsdown --watch",
    "play": "vite",
    "test": "vitest",
    "typecheck": "vue-tsc --noEmit",
    "format": "prettier --cache --write .",
    "release": "bumpp",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@sxzz/eslint-config": "^7.4.3",
    "@sxzz/prettier-config": "^2.2.6",
    "@types/node": "^24.10.4",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vue/test-utils": "^2.4.6",
    "bumpp": "^10.3.2",
    "eslint": "^9.39.2",
    "happy-dom": "^20.0.11",
    "prettier": "^3.7.4",
    "tsdown": "^0.17.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vitest": "^4.0.15",
    "vue": "^3.5.25",
    "vue-tsc": "^3.1.8"
  },
  "prettier": "@sxzz/prettier-config"
}
