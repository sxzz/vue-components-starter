{
  "name": "vue-components-starter",
  "version": "0.0.0",
  "packageManager": "pnpm@10.17.1",
  "description": "A starter for creating a Vue component library.",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/sxzz/vue-components-starter#readme",
  "bugs": {
    "url": "https://github.com/sxzz/vue-components-starter/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sxzz/vue-components-starter.git"
  },
  "author": "三咲智子 Kevin Deng <sxzz@sxzz.moe>",
  "funding": "https://github.com/sponsors/sxzz",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsdown",
    "dev": "tsdown --watch",
    "play": "vite",
    "test": "vitest",
    "typecheck": "vue-tsc --noEmit",
    "format": "prettier --cache --write .",
    "release": "bumpp && pnpm publish",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@sxzz/eslint-config": "^7.2.1",
    "@sxzz/prettier-config": "^2.2.4",
    "@types/node": "^22.18.6",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/test-utils": "^2.4.6",
    "bumpp": "^10.2.3",
    "eslint": "^9.36.0",
    "happy-dom": "^18.0.1",
    "prettier": "^3.6.2",
    "tsdown": "^0.15.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vitest": "^3.2.4",
    "vue": "^3.5.21",
    "vue-tsc": "^3.0.8"
  },
  "prettier": "@sxzz/prettier-config"
}
